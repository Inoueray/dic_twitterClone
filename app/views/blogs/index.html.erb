<div class="main">
  <div class="posts-index-notice">
  	<p><%= notice %></p>
  </div>
  <h2>SHOUT!</h2>
  <% @blogs.each do |blog| %>
    <div class="posts-index-item">
	  	  <p><%= blog.content %></p>
  	  <div class="posts-index-menus">
  	  	<%= link_to "編集", edit_blog_path(blog.id) %>
  	  	<%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除しますか？'} %>		
  	  </div>
    </div>
  <% end %>
</div>