<div class="main">
  <h2>この内容で投稿する</h2>
  <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>
    <div class="confirm-content">
	    <h4>SHOUT!の内容</h4>
	    <p><%= @blog.content %></p>
      <p><%= image_tag @blog.image %></p>

      <div class="form-menus">
        <p>
    	    <%= form.submit("投稿", :class => "btn btn-success")  %>
          <% end %>
          <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
          <%= form.hidden_field :content %>
          <%= form.hidden_field :image_cache %>          
          <%= form.submit "もどる", name: 'back', :class => "btn btn-info" %>
          <% end %>
        </p>
      </div>
    </div>
</div>