<div class="main">
  <h2><%= @user.name %>のページ</h2>
  <div class="user-info">
    <div class="user-image">
      <%= image_tag @user.image %>    
    </div>
    <div>
      <p>メールアドレス: <%= @user.email %></p>
    </div>
    <div>
      <%= link_to "プロフィールを編集", edit_user_path(@user.id) %>
    </div>
  </div>
  <div class="user-favorites">
    <h3>お気に入りのSHOUT!</h3>
    <% @favorite_blogs.each do |favorite_blog| %>
      <div class="posts-index-item">
        <p class="user-name"><%= favorite_blog.user.name %></p>
        <p><%= favorite_blog.content %></p>
      <div class="posts-index-menus">
        <%= link_to "詳細", blog_path(favorite_blog.id) %>
      </div>
    </div>
  <% end %>
  </div>
</div>
