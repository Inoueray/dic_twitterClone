<!DOCTYPE html>
<html>
  <head>
    <title>SHOUT!〜想いを叫べば、何かが変わるかも。〜</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <div class="wrapper">
    	<header>
        <div class="container-fluid">
          <nav class="header-menus">
        		<% if logged_in? %>
              <ul class="row">
          			<li class="col-sm-2"><%= link_to "TOP", '/' %></li>
          			<li class="col-sm-2"><%= link_to "SHOUT!一覧", blogs_path %></li>
                <li class="col-sm-2"><%= link_to "SHOUT!する", new_blog_path %></li>
          			<li class="col-sm-2"><%= link_to "プロフィール", user_path(current_user.id) %></li>
                <li class="col-sm-2"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
              </ul>
            <% else %>
              <ul class="row">
                <li class="col-sm-4"><%= link_to "TOP", '/' %></li>
                <li class="col-sm-4"><%= link_to "新規登録", new_user_path %></li>
                <li class="col-sm-4"><%= link_to "ログイン", new_session_path %></li>
              </ul>
            <% end %>
          </nav>
        </div>
    	</header>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
      <footer>
        <div class="container">
       	  <p>created by @inoueray</p>
        </div>
      </footer>
    </div>
  </body>
</html>
